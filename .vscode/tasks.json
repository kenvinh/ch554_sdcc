    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "if exist \"${fileDirname}\\${config:build_dir}\" (cmake --build \"${fileDirname}\\${config:build_dir}\") else (cmake -D CMAKE_TOOLCHAIN_FILE=${workspaceFolder}/toolchain/sdcc-toolchain-8051.cmake \"${fileDirname}\\CMakeLists.txt\" -G Ninja -B\"${fileDirname}\\${config:build_dir}\" && cmake --build \"${fileDirname}\\${config:build_dir}\") ",
            "problemMatcher": [],
        },
        {
            "label": "rebuild",
            "type": "shell",
            "command": "if exist \"${fileDirname}\\${config:build_dir}\" (cmake --build \"${fileDirname}\\${config:build_dir}\" --clean-first) else (cmake -D CMAKE_TOOLCHAIN_FILE=${workspaceFolder}/toolchain/sdcc-toolchain-8051.cmake \"${fileDirname}\\CMakeLists.txt\" -G Ninja -B\"${fileDirname}\\${config:build_dir}\" && cmake --build \"${fileDirname}\\${config:build_dir}\") ",
            "problemMatcher": []
        }
    ]
}